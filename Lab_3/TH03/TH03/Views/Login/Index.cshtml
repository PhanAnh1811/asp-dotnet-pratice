@{
    ViewBag.Title = "Home Page";
}

<div class="container" style="margin-top:3rem;">
    <div class="col-lg-3 col-md-4 col-sm-1">
        <div class="list-group">
            <h3>CATEGORIES</h3>
            <a href="#" class="list-group-item active">Phone</a>
            <a href="#" class="list-group-item">Laptop</a>
            <a href="#" class="list-group-item">Television</a>
        </div>
        <div class="list-group">
            <h3>BRANDS</h3>
            <a href="#" class="list-group-item active">Samsung</a>
            <a href="#" class="list-group-item">Sony</a>
            <a href="#" class="list-group-item">Apple</a>
        </div>
    </div>

    <div class="col-lg-9 col-md-8 col-sm-1" style="margin-top:20px">
        <form>
            <div class="form-group">
                <label for="">Username</label>
                <input type="text" class="form-control" id="inputUser" placeholder="UserName" />
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input type="email" class="form-control" id="inputEmail" placeholder="Email" />
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input type="password" class="form-control" id="inputPassword" placeholder="Password" />
            </div>
            <div class="checkbox">
                <label><input type="checkbox"/> Remember me </label>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
